@model AMI.MVC.WebApp.Models.Classes.ClassListModel

@{
    ViewBag.Title = "View";
}

<h2>View</h2>

<p>
    @Html.ActionLink("Create New", "Edit")
</p>

@using (Html.BeginForm(MVC5.Class.ActionNames.ViewAll, MVC5.Class.Name, FormMethod.Get))
{
    @Html.AntiForgeryToken()
    <div>
        Name <div>@Html.TextBoxFor(m => m.Name)</div>
        Number <div>@Html.TextBoxFor(m => m.Number)</div>
        Prefix <div>@Html.TextBoxFor(m => m.Prefix)</div>
        <button type="submit">Search</button>
    </div>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Number)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prefix)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Classes)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Number)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Prefix)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
           @*@Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |*@
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

